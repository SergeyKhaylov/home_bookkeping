<Window x:Class="Homebookkeping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homebookkeping"
        mc:Ignorable="d"
        Title="Домашняя Бухгалтерия" Height="380" Width="612" Loaded="Window_Loaded">
    <Grid>
        <Button x:Name="ShowTransactionsMonth" Content="Приход/расход&#xD;&#xA; за текущий месяц" HorizontalAlignment="Left" Margin="73,258,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="ShowTransactionsMonth_Click"/>
        <Button x:Name="ButtonAdd" Content="Добавить приход/расход" HorizontalAlignment="Left" Margin="73,57,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="ButtonAdd_Click"/>
        <Button x:Name="ShowTransactions" Content="Приход/расход&#xD;&#xA; за всё время" HorizontalAlignment="Left" Margin="382,258,0,0" VerticalAlignment="Top" Height="50" Width="160" Click="ShowTransactions_Click"/>
        <TextBox x:Name="lShowSum" HorizontalAlignment="Left" Margin="382,57,0,0" VerticalAlignment="Top" Height="54" Width="160" IsReadOnly="True" TextWrapping="WrapWithOverflow"/>

    </Grid>
</Window>
