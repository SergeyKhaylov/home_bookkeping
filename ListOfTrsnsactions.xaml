<Window x:Class="Homebookkeping.ListOfTrsnsactions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homebookkeping"
        mc:Ignorable="d" Height="450" Width="532" Loaded="Window_Loaded" Title="Домашняя бухгалтерия">
    <Grid>

        <DataGrid x:Name="dgOfTransactins" HorizontalAlignment="Center" IsReadOnly="True" Margin="0,46,0,0" VerticalAlignment="Top" Height="378" Width="512" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Дата" Binding="{Binding adding_date}"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding type}"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding category}"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding price}"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding comment}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Удалить" HorizontalAlignment="Left" Height="22" Margin="356,10,0,0" VerticalAlignment="Top" Width="85" Click="Button_Click"/>
        <DatePicker x:Name="dpStart" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" SelectedDateChanged="dpStart_SelectedDateChanged" IsTodayHighlighted="False"/>
        <DatePicker x:Name="dpEnd" HorizontalAlignment="Left" Margin="126,9,0,0" VerticalAlignment="Top" SelectedDateChanged="dpStart_SelectedDateChanged"/>

    </Grid>
</Window>
